<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.inthebeginningdesigns.harrypotterquiz.Q3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#b71c1c"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="cursive"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="#b71c1c"
            android:text="Question 3: Which Professors Teach Defense Against The Dark Arts?"/>
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/sortinghat"
        android:layout_gravity="right"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:fontFamily="serif"
            android:text="Quirrl"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:fontFamily="serif"
            android:text="Snape"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:fontFamily="serif"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="Dumbledor"
            android:id="@+id/c"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:fontFamily="serif"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="Lupin"
            android:id="@+id/d"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:fontFamily="serif"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="Lockheart"
            android:id="@+id/e"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:text="Check"
            android:textSize="24sp"
            android:id="@+id/check"
            android:fontFamily="cursive"
            android:textColor="#b71c1c"
            android:background="#000000"
            />
    </LinearLayout>



    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Next"
        android:id="@+id/next"
        android:textSize="24sp"
        android:fontFamily="cursive"
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="#b71c1c"
        />

</LinearLayout>
